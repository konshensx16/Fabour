{% extends 'base.html.twig' %}

{% block title %}
    {{ app.user }} drafts
{% endblock %}

{% block body %}
    <div class="card card-latest-activity mg-t-20">
        <div class="card-body">
            <div class="slim-card-title mg-b-20" style="color: darkred">Drafts</div>
            {% if posts|length %}
                {% for post in posts %}
                    <div class="row no-gutters mg-b-20">
                        <div class="col-md-4">
                            <a href="{{ path('post.display', {'id': post.id}) }}"><img
                                        src="{{ asset('assets/img/img0.jpg') }}" class="img-fit-cover"
                                        alt=""></a>
                        </div><!-- col-4 -->
                        <div class="col-md-8">
                            <div class="post-wrapper">
                                <a href="{{ path('post.display', {'id': post.id}) }}"
                                   class="activity-title">{{ post.title }}</a>
                                <p>
                                    {{ post.content|length > 300 ? post.content|slice(0, 300) ~ '...' : post.content }}
                                </p>
                                <p class="mg-b-0">
                                    <a href="" class="d-block">{{ post.username }}
                                        in {{ post.name }}</a>
                                    <span>{{ post.created_at|date('Y M d') }} .</span>
                                </p>
                            </div><!-- post-wrapper -->
                        </div><!-- col-8 -->
                    </div><!-- row -->
                {% endfor %}
            {% else %}
                <h3>Welp! there are no posts at the moment, check back later...</h3>
            {% endif %}


        </div><!-- card-body -->
    </div><!-- card -->
{% endblock %}

